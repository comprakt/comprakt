#!/usr/bin/env bash
set -e

# change to this script's directory
# credits to https://stackoverflow.com/questions/4774054/reliable-way-for-a-bash-script-to-get-the-full-path-to-itself/12197518#12197518
pushd . > /dev/null
SCRIPT_PATH="${BASH_SOURCE[0]}";
while([ -h "${SCRIPT_PATH}" ]); do
    cd "`dirname "${SCRIPT_PATH}"`"
    SCRIPT_PATH="$(readlink "`basename "${SCRIPT_PATH}"`")";
done
cd "`dirname "${SCRIPT_PATH}"`" > /dev/null
SCRIPT_PATH="`pwd`";
popd  > /dev/null

TARGET="${TARGET:-release}"

if [[ $BENCH == "1" ]]; then
    VANILLA=1 exec "$SCRIPT_PATH/target/$TARGET/compiler-cli" "$@"
else
    if [[ $# == 1 ]] ; then
        VANILLA=1 exec "$SCRIPT_PATH/target/$TARGET/compiler-cli" "--compile" "-O" "moderate" "$1"
    elif [[ $# == 2 ]] && [[ $1 == "--compile" ]]; then
        VANILLA=1 exec "$SCRIPT_PATH/target/$TARGET/compiler-cli" "--compile" "-O" "moderate" "$2"
    elif [[ $# == 2 ]] && [[ $1 == "--compile-firm" ]]; then
        VANILLA=1 exec "$SCRIPT_PATH/target/$TARGET/compiler-cli" "--compile-firm" "-O" "moderate" "$2"
    fi
fi
